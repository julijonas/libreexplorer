<lt.kikutis.libreexplorer.ui.view.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                          android:layout_width="match_parent"
                                                          android:layout_height="wrap_content"
                                                          android:background="@drawable/background_item_file"
                                                          android:paddingLeft="5dp"
                                                          android:paddingRight="5dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/file_image"
        android:paddingBottom="2dp"
        android:paddingEnd="5dp"
        android:paddingLeft="0dp"
        android:paddingRight="5dp"
        android:paddingStart="0dp"
        android:paddingTop="2dp"/>

    <TextView
        android:id="@+id/text1"
        style="@style/FileItemPrimaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image"
        android:layout_toRightOf="@id/image"/>

    <TextView
        android:id="@+id/text2"
        style="@style/FileItemSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_toEndOf="@id/image"
        android:layout_toRightOf="@id/image"/>

    <TextView
        android:id="@+id/text3"
        style="@style/FileItemSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text1"
        android:layout_toEndOf="@id/image"
        android:layout_toRightOf="@id/image"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text4"
        style="@style/FileItemSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text1"/>

</lt.kikutis.libreexplorer.ui.view.CheckableRelativeLayout>
