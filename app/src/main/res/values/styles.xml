<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>
        <item name="actionModeBackground">@color/app_action</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="FileItemPrimaryText">
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FileItemSecondaryText">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/app_accent</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
