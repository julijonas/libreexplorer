<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>
        <item name="actionModeBackground">@color/action_bar_background</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/app_primary</item>
        <item name="tabIndicatorHeight">6dp</item>
    </style>

    <style name="AppTheme.FileItemPrimaryText">
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.FileItemSecondaryText">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/app_accent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
